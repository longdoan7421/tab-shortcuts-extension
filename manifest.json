{
  "name": "Tab Shortcuts",
  "description": "Add some shortcuts for tabs",
  "version": "1.0",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-shortcuts@longdoan"
    }
  },
  "background": {
    "scripts": ["src/background.js"],
    "service_worker": "src/background.js"
  },
  "commands": {
    "open-tab-current-group": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "mac": "Alt+Shift+T"
      },
      "description": "Open new tab in current group"
    },
    "open-tab-new-group": {
      "suggested_key": {
        "default": "Alt+Shift+G",
        "mac": "Alt+Shift+G"
      },
      "description": "Open new tab in a new group"
    },
    "move-tab-to-group": {
      "description": "Move tab to group"
    },
    "remove-tab-from-group": {
      "description": "Remove tab from group"
    },
    "toggle-sound": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Toggle sound of current tab"
    },
    "duplicate-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Duplicate current tab"
    }
  },
  "icons": { "48": "img/icon48.png", "128": "img/icon128.png" }
}
